# File name: widgets2.kv
#:import Factory kivy.factory.Factory
<MyPopup@Popup>
    id:my_widget
    auto_dismiss:False
    size_hint:0.7,0.8
    pos_hint:{"x":0.2,"top":0.9}
    title:"Select Picture"
    BoxLayout:
        orientation:"vertical"
        size:root.width, root.height
        spacing:10
        padding:10

        GridLayout:
            cols:2
            rows:1
       
            FileChooserListView:
                id:filechooser
                size_hint_y:2
                
                on_selection:
                    root.selected(filechooser.selection)
                    root.screen.manager.ids.fourthw.ids.imi.source=root.selected(filechooser.selection)

        
            Image:
                id:uploaded_pic
                source:""
        Button:
            size_hint:0.5,0.1
            pos_hint:{'center_x':0.5}
            text:"Upload"
            font_size:18
            on_release:
                root.dismiss()
                app.root.current="first"
                root.screen.manager.transition.direction="right"
                
        

    
    
